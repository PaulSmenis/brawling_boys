{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
	table {
		background-color: #808080;
		font-family: Calibri, sans-serif;
		transition: box-shadow linear 0.2s 0s;
		margin: 0 0 1rem 0;
	}
	table:hover {
		box-shadow: 1px 1px 2px magenta, -1px -1px 2px magenta;
	}
	table, th, td {
		border: 1px solid black;
	}
	th, td {
		background-color: #D3D3D3;
		text-align: center;
		width: 3rem;
		height: 2rem;
	}
</style>
{% endblock %}

{% block body %}
	<div class="count">
		{{ pagination.getTotalItemCount }}
	</div>
	<table>
		<tr>
			{# sorting of properties based on query components #}
			<th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
			<th{% if pagination.isSorted('a.name') %} class="sorted"{% endif %}>
				{{ knp_pagination_sortable(pagination, 'name', 'a.name') }}
			</th>
		</tr>

		{# table body #}
		{% for article in pagination %}
				<tr {% if loop.index is odd %}class="color"{% endif %}>
					<td>
						<a href="/megaman/details/{{ article.id }}">
						{{ article.id }}
						</a>
					</td>

					<td>{{ article.name }}</td>
				</tr>
		{% endfor %}
	</table>
	{# display navigation #}
	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>
{% endblock %}